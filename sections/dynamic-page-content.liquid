<section
  class="section-text {{ section.settings.color_bg }} {{ section.settings.text_color }}"
  data-section-id="{{ section.id }}"
  data-section-type="section-text"
  style="--PT: {{ section.settings.padding_top }}px; --PB: {{ section.settings.padding_bottom }}px;"
>
  <div class="wrapper--narrow section-padding">
    <div class="text__standard text-center">
      
        <div class="standard__kicker body-size-5" style="font-weight: bold;">
          {% assign page_title_parts = page.title | remove: 'Real Christmas Trees ' | split: ' ' %}
          {% assign location = page_title_parts | last %}
          We deliver to {{ location }}
        </div>
      
        <div class="standard__rte body-size-5">
          <p>We deliver your perfect real Christmas tree direct to your door in {{ location }}. A family run business, we have been selling Christmas trees for over 10 years.</p>
        </div>
      
        <a href="/collections/all" class="standard__cta btn--large hero__btn btn--soft btn--primary" style="background-color: #BA353B; color: #FFFFFF;">
          Find your perfect tree
        </a>
      
        <div class="standard__kicker body-size-1" style="font-weight: bold; text-transform: uppercase; letter-spacing: 0.2em;">
          Free and fast delivery
        </div>
    
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Dynamic Page Content",
  "settings": [
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "select",
      "id": "align_text",
      "label": "Text alignment",
      "default": "text-left",
      "options": [
        {"value": "text-left", "label": "Left"},
        {"value": "text-center", "label": "Centered"}
      ]
    },
    {
      "type": "select",
      "id": "color_bg",
      "label": "Background color",
      "default": "palette--light bg--neutral",
      "options": [
        {"value": "palette--light bg--neutral", "label": "Default"},
        {"value": "palette--light bg--accent", "label": "Light"},
        {"value": "palette--dark bg--invert", "label": "Dark"},
        {"value": "palette--dark bg--invert--accent", "label": "Dark accent"}
      ]
    },
    {
      "type": "header",
      "content": "Section spacing"
    },
    {
      "type": "select",
      "id": "width",
      "label": "Width",
      "default": "wrapper",
      "options": [
        {"value": "wrapper--full", "label": "Full width padded"},
        {"value": "wrapper", "label": "Page width"},
        {"value": "wrapper--narrow", "label": "Page width narrow"},
        {"value": "wrapper--tiny", "label": "Page width extra narrow"}
      ]
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 180,
      "step": 2,
      "unit": "px",
      "label": "Padding top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 180,
      "step": 2,
      "unit": "px",
      "label": "Padding bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Dynamic Page Content",
      "category": "Text"
    }
  ],
  "disabled_on": {
    "groups": ["header", "aside"]
  }
}
{% endschema %}